extends layout

block content
  div(class="container mx-auto px-4 py-8")
    div(class="max-w-lg mx-auto")
      div(class="bg-white rounded-lg shadow-lg overflow-hidden p-6 text-center")
        div(class="mb-6")
          i(class="bx bx-error-circle text-6xl text-red-500")
        
        h1(class="text-2xl font-bold mb-4") #{message || 'Error Occurred'}
        
        if error && error.status
          p(class="text-gray-500 mb-6") Error #{error.status}
        else
          p(class="text-gray-500 mb-6") Something went wrong.
        
        if error && process.env.NODE_ENV === 'development'
          div(class="mt-6 p-4 bg-gray-100 rounded-lg text-left overflow-auto max-h-64")
            pre(class="text-xs text-gray-700") #{error.stack}
        
        div(class="mt-8")
          a(href="/" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition duration-300")
            i(class="bx bx-home-alt mr-2")
            span Return Home 