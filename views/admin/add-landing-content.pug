extends ../layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="flex items-center mb-6")
      a(href="/admin/landing" class="mr-4 text-indigo-600 hover:text-indigo-800")
        i(class="bx bx-arrow-back text-xl")
      h1(class="text-3xl font-bold") Add Landing Content
    
    div(class="bg-white rounded-lg shadow-md p-6" data-aos="fade-up")
      form(action="/admin/landing/add" method="POST" enctype="multipart/form-data")
        div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
          div(class="mb-4")
            label(for="section" class="block text-sm font-medium text-gray-700 mb-1") Section Type *
            select(id="section" name="section" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
              option(value="") -- Select Section Type --
              option(value="hero") Hero Section
              option(value="feature") Feature
              option(value="cta") Call to Action
          
          div(class="mb-4")
            label(for="title" class="block text-sm font-medium text-gray-700 mb-1") Title *
            input(type="text" id="title" name="title" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          
          div(class="mb-4 md:col-span-2")
            label(for="content" class="block text-sm font-medium text-gray-700 mb-1") Content *
            textarea(id="content" name="content" rows="4" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          
          div(class="mb-4")
            label(for="image" class="block text-sm font-medium text-gray-700 mb-1") Image
            input(type="file" id="image" name="image" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
            p(class="mt-1 text-xs text-gray-500") Supported formats: JPEG, PNG, GIF, SVG. Max size: 5MB
          
          div(class="mb-4")
            label(for="order_num" class="block text-sm font-medium text-gray-700 mb-1") Display Order
            input(type="number" id="order_num" name="order_num" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
            p(class="mt-1 text-xs text-gray-500") Lower numbers display first
        
        div(class="border-t border-gray-200 mt-6 pt-6")
          h3(class="text-lg font-medium mb-4") Button (Optional)
          
          div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
            div(class="mb-4")
              label(for="button_text" class="block text-sm font-medium text-gray-700 mb-1") Button Text
              input(type="text" id="button_text" name="button_text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
            
            div(class="mb-4")
              label(for="button_link" class="block text-sm font-medium text-gray-700 mb-1") Button Link
              input(type="text" id="button_link" name="button_link" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
        
        div(class="mt-6 flex justify-end")
          a(href="/admin/landing" class="bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded-lg mr-2") Cancel
          button(type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg") Add Content 